<style>
    /* Bố cục chung */
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 16px;
        text-align: left;
        border: 2px solid black; /* Khung bảng màu đen */
    }

    th, td {
        border: 1px solid black; /* Khung của các ô trong bảng */
        padding: 8px;
    }

    th {
        background-color: #f4f4f4;
        font-weight: bold;
        text-align: center;
    }
    /* Tóm tắt giỏ hàng */
    .cart-summary {
        margin-top: 20px;
        padding: 15px;
        border: 2px solid black; /* Khung của tóm tắt giỏ hàng màu đen */
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    /* Căn chỉnh cột */
    td:first-child {
        text-align: left;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    td:nth-child(2), td:nth-child(3) {
        text-align: center;
    }

    td:nth-child(4) {
        text-align: right;
    }

    .cart-table td img {
        max-width: 100px; /* Giới hạn kích thước ảnh */
        height: auto;
        object-fit: cover; /* Đảm bảo ảnh không bị biến dạng */
    }

    h3 {
        text-align: center; /* Căn giữa tiêu đề */
        color: #333;
        font-size: 24px;
        margin-bottom: 20px;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
    }

    form {
        background-color: #ffffff;
        border-radius: 8px;
        padding: 30px;
        max-width: 600px;
        margin: 20px auto;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        text-align: center;
        font-size: 28px;
        color: #fff;
        background-color: #ff6f61;
        padding: 15px 0;
        margin-bottom: 30px;
        border-radius: 5px;
        width: 100%;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-size: 16px;
            margin-bottom: 5px;
            color: #333;
        }

        .form-group input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            background-color: #f9f9f9;
            transition: border-color 0.3s ease;
        }

            .form-group input:focus {
                border-color: #ff6f61;
                outline: none;
            }

    .submit-btn {
        width: 100%;
        padding: 15px;
        background-color: #ff6f61;
        border: none;
        border-radius: 8px;
        color: white;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .submit-btn:hover {
            background-color: #e65c52;
        }

        .submit-btn:active {
            background-color: #d14c3a;
        }
</style>

