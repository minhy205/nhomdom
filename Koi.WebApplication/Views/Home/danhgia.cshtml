@{
    ViewData["Title"] = "danhgia";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/Stylelayout.css" />
    <link rel="stylesheet" href="~/css/styledanhgia.css" />
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/Stylelayout.css" />
    <link rel="stylesheet" href="~/css/styledanhgia.css" />
</head>
<body>
    <div>
        <h1>Đánh Giá Sản Phẩm</h1>
    </div>

    <div class="container">
        <div class="rating-section">
            <h2>Nhập Số Sao</h2>
            <input type="number" id="starRating" min="1" max="5" class="input-field" placeholder="Chọn số sao (1-5)">
        </div>

        <div class="comment-section">
            <h2>Nhập Bình Luận</h2>
            <textarea id="commentText" class="input-field" rows="4" placeholder="Nhập bình luận của bạn"></textarea>
        </div>

        <button class="submit-button" onclick="submitReview()">Đồng ý</button>
    </div>

    <!-- Phần hiển thị thông báo cảm ơn -->
    <div id="thankYouMessage" class="thank-you-section" style="display: none;">
        <h2>Cảm ơn bạn đã đánh giá!</h2>
    </div>

    <script>
        function submitReview() {
            // Lấy giá trị từ các trường nhập liệu
            var starRating = document.getElementById("starRating").value;
            var commentText = document.getElementById("commentText").value;

            // Kiểm tra xem các giá trị nhập vào có hợp lệ không
            if (starRating >= 1 && starRating <= 5 && commentText.trim() !== "") {
                // Ẩn phần form nhập liệu
                document.querySelector(".container").style.display = "none";
                // Hiển thị thông báo cảm ơn
                document.getElementById("thankYouMessage").style.display = "block";
            } else {
                alert("Vui lòng nhập số sao và bình luận hợp lệ!");
            }
        }
    </script>
</body>
