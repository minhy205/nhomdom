@{
    ViewData["Title"] = "Thêm Cá Koi Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/styleindex.css" />
}
<style>
    .container {
        flex-wrap: wrap;
        justify-content: center;
        margin: 20px;
    }

    .buy-button1 {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #3498db; /* Màu xanh da trời */
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .buy-button1 a {
            color: white;
            text-decoration: none;
        }

        .buy-button1:hover {
            background-color: #2980b9; /* Màu xanh đậm hơn khi hover */
        }
</style>

<div class="container">
    <head>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/css/Stylelayout.css" />
        <link rel="stylesheet" href="~/css/styleindex.css" />

    </head>


    <h1>@ViewData["Title"]</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Breed">Giống Cá</label>
            <input type="text" class="form-control" id="Breed" name="Breed" required />
        </div>
        <div class="form-group">
            <label for="Origin">Xuất Xứ</label>
            <input type="text" class="form-control" id="Origin" name="Origin" required />
        </div>
        <div class="form-group">
            <label for="Gender">Giới Tính</label>
            <input type="text" class="form-control" id="Gender" name="Gender" required />
        </div>
        <div class="form-group">
            <label for="Age">Tuổi</label>
            <input type="number" class="form-control" id="Age" name="Age" required />
        </div>
        <div class="form-group">
            <label for="Size">Kích Thước (cm)</label>
            <input type="number" class="form-control" id="Size" name="Size" required />
        </div>
        <div class="form-group">
            <label for="Personality">Tính Cách</label>
            <input type="text" class="form-control" id="Personality" name="Personality" />
        </div>
        <div class="form-group">
            <label for="FoodPerDay">Lượng Thức Ăn Mỗi Ngày (g)</label>
            <input type="number" class="form-control" id="FoodPerDay" name="FoodPerDay" required />
        </div>
        <div class="form-group">
            <label for="ScreeningRate">Tỉ Lệ Kiểm Tra (%)</label>
            <input type="number" class="form-control" id="ScreeningRate" name="ScreeningRate" required />
        </div>
        <div class="form-group">
            <label for="Price">Giá (VND)</label>
            <input type="number" class="form-control" id="Price" name="Price" required />
        </div>
        <div class="form-group">
            <label for="Status">Trạng Thái</label>
            <input type="text" class="form-control" id="Status" name="Status" required />
        </div>
        <div class="form-group">
            <label for="Img">Link Hình Ảnh</label>
            <input type="text" class="form-control" id="Img" name="Img" />
        </div>
        <button class="buy-button1"><a href="@Url.Action("Koifarm","CacLoaiCaKoi")">Thêm Cá Koi</a></button>
    </form>
</div>


<style>
    table {
        width: 100%;
        table-layout: fixed;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid black;
        padding: 10px;
        text-align: center;
        font-size: 16px;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #e6e6e6;
    }
</style>
<div class="container">

    <h1>@ViewData["Title"]</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Giống Cá</th>
                <th>Xuất Xứ</th>
                <th>Giới Tính</th>
                <th>Tuổi</th>
                <th>Kích Thước (cm)</th>
                <th>Tính Cách</th>
                <th>Lượng Thức Ăn Mỗi Ngày (g)</th>
                <th>Tỉ Lệ Kiểm Trang (%)</th>
                <th>Giá (VNĐ)</th>
                <th>Trạng Thái</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var koi in Model)
            {
                <tr>
                    <td>@koi.Breed</td>
                    <td>@koi.Origin</td>
                    <td>@koi.Gender</td>
                    <td>@koi.Age</td>
                    <td>@koi.Size cm</td>
                    <td>@koi.Personality</td>
                    <td>@koi.FoodPerDay g</td>
                    <td>@koi.ScreeningRate %</td>
                    <td>@koi.Price VND</td>
                    <td>@koi.Status</td>
                    <td>
                        <a href="@Url.Action("Details", "cakoi", new { id = koi.CaKoiId })" class="btn btn-info">Chi Tiết</a>
                        <a href="@Url.Action("Edit", "cakoi", new { id = koi.CaKoiId })" class="btn btn-warning">Chỉnh Sửa</a>
                        <form method="post" action="@Url.Action("Delete", "cakoi", new { id = koi.CaKoiId })" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</button>

                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <h1>Cá Koi Mới Thêm</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>Giống Cá</th>
                <th>Xuất Xứ</th>
                <th>Giới Tính</th>
                <th>Tuổi</th>
                <th>Kích Thước (cm)</th>
                <th>Tính Cách</th>
                <th>Lượng Thức Ăn Mỗi Ngày (g)</th>
                <th>Tỉ Lệ Kiểm Tra</th>
                <th>Giá (VND)</th>
                <th>Trạng Thái</th>
                <th>Hình Ảnh</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Breed</td>
                    <td>@item.Origin</td>
                    <td>@item.Gender</td>
                    <td>@item.Age</td>
                    <td>@item.Size cm</td>
                    <td>@item.Personality</td>
                    <td>@item.FoodPerDay g</td>
                    <td>@item.ScreeningRate %</td>
                    <td>@item.Price</td>
                    <td>@item.Status</td>
                    <td><img src="@item.Img" alt="Cá Koi" width="100" /></td>
                </tr>
            }
        </tbody>
    </table>
</div>
