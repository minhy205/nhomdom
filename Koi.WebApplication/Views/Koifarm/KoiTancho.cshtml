<!-- CSS để căn chỉnh và hiển thị các sản phẩm -->
<style>
    /* Sử dụng flexbox để sắp xếp các sản phẩm trên cùng một hàng */
    .products-container {
        display: flex;
        justify-content: space-between; /* Tạo khoảng cách giữa các sản phẩm */
        gap: 10px; /* Khoảng cách giữa các sản phẩm */
        flex-wrap: wrap; /* Cho phép sản phẩm xuống hàng nếu không đủ không gian */
    }

    /* Điều chỉnh mỗi sản phẩm chiếm 33.33% chiều rộng */
    .product {
        flex: 1 1 30%; /* Mỗi sản phẩm chiếm 30% chiều rộng */
        box-sizing: border-box;
        text-align: center; /* Căn giữa các sản phẩm */
        margin-bottom: 20px; /* Khoảng cách giữa các sản phẩm theo chiều dọc */
    }

        /* Điều chỉnh hình ảnh để nó tự động thay đổi kích thước và nằm gọn trong sản phẩm */
        .product img {
            width: 100%; /* Đảm bảo hình ảnh chiếm hết chiều rộng của sản phẩm */
            height: auto; /* Giữ tỷ lệ hình ảnh */
            max-width: 100%; /* Đảm bảo hình ảnh không quá rộng */
            margin-bottom: 10px;
        }

    /* Điều chỉnh các nút mua */
    .buy-button {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .buy-button:hover {
            background-color: #2980b9;
        }

    /* Các tiêu đề sản phẩm */
    .product-title, .product-price {
        font-size: 16px;
        margin: 5px 0;
    }

    .image-container {
        width: 100%; /* Độ rộng 100% trang hoặc phần tử chứa */
        height: 300px; /* Đặt chiều cao theo ý muốn */
        overflow: hidden; /* Ẩn phần ảnh vượt quá kích thước container */
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Lấp đầy và cắt ảnh cho vừa với container */
        }
</style>