@{
    ViewBag.Title = "Xóa Sản Phẩm";
    <link rel="stylesheet" href="~/css/styleindex.css" />
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa sản phẩm</h1>

<p>Bạn có chắc chắn muốn xóa sản phẩm này không?</p>

<div>
    <h3>@Model.TenSanPham</h3>
    <p><strong>Kích Thước:</strong> @Model.KichThuoc cm</p>
    <p><strong>Giá:</strong> @Model.Gia VND</p>
    <p><strong>Giống:</strong> @Model.Giong</p>
    <img src="data:image/png;base64,@(Model.Anh != null ? Convert.ToBase64String(Model.Anh) : "")" alt="Ảnh sản phẩm" style="max-width: 400px;" />
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="SanPhamID" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
